@model Zadacha1
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удалить задачу</h2>
            <hr/>
            <div>
                <div class="mb-3">
                    <label asp-for="Name">Название</label>
                    <input asp-for="Name" disabled class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="Description">Описание</label>
                    <input asp-for="Description" disabled class="form-control"/>
                </div>
                <div class="mb-3">
                    <label asp-for="EstimatedHours">Примерное время выполнения</label>
                    <input asp-for="EstimatedHours" disabled class="form-control"/>
                </div>
                 <div class="mb-3">
                    <label asp-for="IsDone">Сделано</label>
                    <input asp-for="IsDone" disabled class="form-control"/>
                </div>
            </div>
        </div>
        <button type="submit"class="btn btn-primary" style="width:150px">Удалить задачу</button>
        <a asp-controller="Zad1" asp-action="Index" class="btn btn-primary" style="width:150px">Вернуться обратно</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}