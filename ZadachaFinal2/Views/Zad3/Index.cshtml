@model IEnumerable<Zadacha3>
@{
    ViewData["Title"] = "Index";
}

<h1>Задача 3</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <a asp-controller="Zad3" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp Добавить новую задачу</a>
        </div>
    </div>
</div>
<partial name="_Index"/>
        @foreach(var i in Model)
        {
            <tr>
                <td>
                    @i.Name
                </td>
                <td>
                    @i.Description
                </td>
                <td>
                    @i.EstimatedHours
                </td>
                <td>
                    @i.IsDone
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Zad3" asp-action="Edit" asp-route-id="@i.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i>Изменить
                        </a>
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="Zad3" asp-action="Delete" asp-route-id="@i.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-trash3"></i>Удалить
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>